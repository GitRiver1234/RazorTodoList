@page "{searchString?}"
@model RazorTodoList.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>トップページ</h1>

<p>
    <a asp-page="Create">ToDoの新規登録</a>
</p>

<form>
    <p>
        ToDo名：<input type="text" asp-for="SearchString" />
        <input type="submit" value="検索" />
        <select asp-for="TodoStates" asp-items="Model.States">
            <option value="">All</option>
        </select>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                ToDo名
            </th>
            <th>
                ステータス
            </th>
            <th>
                実施日
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Todo) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TodoName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.States)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TodoDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">編集</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">詳細</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">消去</a>
            </td>
        </tr>
}
    </tbody>
</table>
